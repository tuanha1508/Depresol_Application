<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result_analysis">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/my_imageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/doge"
            android:scaleType="centerCrop"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/circle" />
        <RelativeLayout
            android:id="@+id/khung_result"
            android:layout_width="340dp"
            android:layout_height="105dp"
            android:layout_below="@+id/my_imageview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/rectangle_ek111_shape">

            <ImageView
                android:id="@+id/vector_ek9"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginLeft="305dp"
                android:layout_marginTop="10dp"
                android:contentDescription="vector_ek9"
                android:src="@drawable/vector_ek9" />

            <TextView
                android:id="@+id/text_result"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/firasans_medium"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:textStyle="italic" />
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>